{
  "include": [
    "src"
  ],
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2017",
    "module": "ESNext",
    "outDir": "dist/esm",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "incremental": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "declarationDir": "dist/esm-types",
    "declaration": true,
    "sourceMap": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "jsx": "react",
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "noEmit": false,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  }
}
